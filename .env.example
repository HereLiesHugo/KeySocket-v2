# Environment example for KeySocket
# Copy to .env and edit

# Server
HOST=0.0.0.0
PORT=3000
NODE_ENV=production

# Use TLS directly in Node (optional) OR run behind a reverse proxy (recommended)
USE_TLS=false
TLS_KEY=/etc/letsencrypt/live/keysocket.eu/privkey.pem
TLS_CERT=/etc/letsencrypt/live/keysocket.eu/fullchain.pem

# Security
RATE_LIMIT=120
CONCURRENT_PER_IP=5
ALLOWED_HOSTS= keysocket.eu, www.keysocket.eu # optional comma-separated destinations, e.g. example.com,192.0.2.5
